<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:visibility="invisible" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_below="@+id/sign_in_button"
        android:visibility="invisible"
        tools:text="Login with Facebook" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnGoogle"
            style="@style/com_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="46dp"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:background="@drawable/bg_button"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/google"
            android:fontFamily="sans-serif"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:text="@string/lbl_btn_google"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/common_plus_signin_btn_text_light_default"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/btnFace"
            style="@style/com_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_above="@+id/btnGoogle"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:background="@drawable/bg_button"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/facebook"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:text="@string/lbl_btn_facebook"
            android:textAlignment="textStart"
            android:textColor="@color/common_plus_signin_btn_text_light_default"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/lblApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnFace"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/eventtus" />

    </RelativeLayout>


</RelativeLayout>